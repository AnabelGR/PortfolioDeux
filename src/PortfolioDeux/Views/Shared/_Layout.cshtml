<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/css/uikit.min.css" />

    <!-- jQuery is required -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- UIkit JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit-icons.min.js"></script>

    <script src="~/bower_components/uikit/src/js/uikit.js"></script>
    <link href="~/CSS/styles.css" rel="stylesheet" />
    <script src="~/JS/scripts.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <a href="#offcanvas-slide" class="uk-button uk-button-danger" uk-toggle>menu</a>

    <div id="offcanvas-slide" uk-offcanvas>
        <div class="uk-offcanvas-bar">

            <ul class="uk-nav uk-nav-default">
                <li class="uk-nav-header">work</li>
                <li>@Html.ActionLink("csharp | javascript | angular coding projects", "Projects", "Portfolio")
                </li>
                <li>
                   @Html.ActionLink("art director | editorial design", "Design", "Portfolio")</li>
                <li>@Html.ActionLink("web designs", "WebDesign", "Portfolio")</li>
                <li class="uk-nav-divider"></li>
                <li class="uk-nav-header">about</li>
                <li>@Html.ActionLink("bio", "Bio", "Home")</li>
                <li>@Html.ActionLink("references | cv", "ReferencesCV", "Home")</li>
                <li>@Html.ActionLink("get in touch", "GetInTouch", "Home")</li>
            </ul>

        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
