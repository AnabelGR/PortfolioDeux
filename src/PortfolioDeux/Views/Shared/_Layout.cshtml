<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/CSS/styles.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet">
    <script src="~/JS/scripts.js"></script>
    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/css/uikit.min.css" />

    <!-- jQuery is required -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- UIkit JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit-icons.min.js"></script>


    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="uk-container" style="background-color:dimgrey;">
        <div class="uk-nav-header">
            <nav class="uk-navbar-center">
                <div class="uk-navbar-content uk-navbar-left">
                    <p style="color:white;">print + web design<br />by Anabel Ramirez</p>
                </div>
                <div class="uk-navbar-content uk-navbar-center">
                    <img src="~/images/logo.png" width="100" />
                </div>
                <div class="uk-navbar-content uk-navbar-right"><a href="#offcanvas-slide" uk-toggle style="text-decoration:none; color:white;">MENU</a></div>

                <a href="" class="uk-navbar-toggle"></a>
            </nav>
        </div>


        <div id="offcanvas-slide" uk-offcanvas>
            <div class="uk-offcanvas-bar linkstyle">

                <ul class="uk-nav uk-nav-default">
                    <li class="uk-nav-header">work</li>
                    <li>
                        @Html.ActionLink("csharp | javascript | angular coding projects", "Projects", "Portfolio")
                </li>
                <li>
                    @Html.ActionLink("art director | editorial design", "Design", "Portfolio")
                </li>
                <li>@Html.ActionLink("web design", "WebDesign", "Portfolio")</li>
                <li class="uk-nav-divider"></li>
                <li class="uk-nav-header">about</li>
                <li>@Html.ActionLink("bio", "Bio", "Home")</li>
                <li>@Html.ActionLink("get in touch", "GetInTouch", "Home")</li>
            </ul>
        </div>
    </div>
        </div>
    <div class="uk-container">
        @RenderBody()
    </div>
</div>
</body>
</html>
