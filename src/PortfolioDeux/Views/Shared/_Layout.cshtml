<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- jQuery is required -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/css/uikit.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/css/components/slideshow.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/css/components/slidenav.css" />



    <!-- UIkit JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit-icons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.4/js/components/grid.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.4/js/components/slideshow.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.4/js/core/grid.js"></script>

    <script src="https://use.fontawesome.com/c3a95916f1.js"></script>
    <link href="~/CSS/styles.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet">
    <script src="~/JS/scripts.js"></script>


    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="uk-container" style="background-color:dimgrey;">
        <div class="uk-nav-header">
            <nav class="uk-navbar-center">
                <div class="uk-navbar-content uk-navbar-left">
                </div>
                <div class="uk-navbar-content uk-navbar-center">
                   <img src="~/images/logo.png" width="100" />
                </div>
                <div class="uk-navbar-content uk-navbar-right"><a href="#offcanvas-slide" uk-toggle style="text-decoration:none; color:white;">MENU</a>
                    <ul> @Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:white;" })</ul>
                </div>

                <a href="" class="uk-navbar-toggle"></a>
            </nav>
        </div>

        <div id="offcanvas-slide" uk-offcanvas>
            <div class="uk-offcanvas-bar linkstyle">
            <ul class="uk-nav uk-nav-default">
                <li class="uk-nav-header">work</li>
                <li> @Html.ActionLink("csharp | javascript | angular coding projects", "Projects", "Portfolio")</li>
                <li> @Html.ActionLink("art director | editorial design", "Design", "Portfolio")</li>
                <li>@Html.ActionLink("web design", "WebDesign", "Portfolio")</li>
                <li>@Html.ActionLink("illustration", "Illustration", "Portfolio")</li>
                <li class="uk-nav-divider"></li>
                <li class="uk-nav-header">about</li>
                <li>@Html.ActionLink("bio", "Bio", "Home")</li>
                <li>@Html.ActionLink("get in touch", "GetInTouch", "Home")</li>
                <li class="uk-nav-divider"></li>
                <li class="uk-nav-header">hosted portfolios</li>
                <li class="fa-ul">
                <li><a href="https://www.linkedin.com/in/anabel-ramirez"><i class="fa fa-linkedin"></i></a></li>
                <li><a href="https://www.github.com/AnabelGR"> <i class="fa fa-github"></i> </a></li>
                <li><a href="https://www.behance.net/amatorah"> <i class="fa fa-behance"></i> </a></li>
            </ul>
        </div>
    </div>
</div>
    <div class="uk-container">
        @RenderBody()
    </div>
</body>
</html>
